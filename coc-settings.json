{
  "languageserver": {
    "hdlChecker": {
      "command": "hdl_checker",
      "args": ["--lsp"],
      "filetypes": ["vhdl", "verilog", "systemverilog"],
	  "initializationOptions": {
        "settings": {
          "configuration": "${env:HOME}/.vim/hdl_checker.json"
        }
      }
    },
    "svlangserver": {
      "command": "svlangserver",
      "filetypes": ["systemverilog", "verilog"]
    },
    "perl": {
      "command": "perl",
      "args": ["-MPerl::LanguageServer", "-e", "Perl::LanguageServer::run", "--", "--stdio"],
      "filetypes": ["perl"]
    },
    "matlab": {
      "command": "java",
      "args": ["-jar", "/usr/local/share/matlab-language-server/matlab-language-server.jar"],
      "filetypes": ["matlab"]
    },
    "xml": {
      "command": "lemminx",
      "filetypes": ["xml"]
    }
  },
  "snippets.enable": false,
  "diagnostic.enable": false,
  "snippets.ultisnips.enable": true
}